<div>
    {% case media.media_type %}
        {% when "image" %}
            <img src="{{ media | image_url:width: 450 }}" width="" height="" class="w-full h-full" alt="">
        {% when "video" %}
            {{ media | video_tag:controls:true, class:'w-[450px]' }}
        {% when "external_video" %}
            {{ media | external_video_tag }}
        {% when "model" %}
            {{ media | model_viewer_tag }}

        {% else %}
            
    {% endcase %}
 
   
</div>