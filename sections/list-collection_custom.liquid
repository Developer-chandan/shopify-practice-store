<h2 class="py-8 text-center">Collection</h2>

<div class="container mx-auto">
  <div class="flex justify-center flex-wrap">
    {% for collection in collections %}
      {% if collection.all_products_count > 0 %}
        <div>
          {% if collection.featured_image %}
            {% assign featured_image = collection.featured_image %}
          {% else %}
            {% assign featured_image = collection.products.first.featured_image %}
          {% endif %}

          <img src="{{ featured_image | image_url: width : 450 }}" width="" height="" alt="{{ featured_image.alt }}">
          <h2>{{ collection.title }}</h2>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "List-Collection",
  "settings": [
    {
      "type": "text",
      "label": "Title",
      "id": "collection_title"
    }
  ],
  "presets": [
    {
      "name": "List Collection Custom"
    }
  ]
}
{% endschema %}
